{
  "private": true,
  "name": "@wicked_query/slumdogjs",
  "version": "1.0.0-beta1",
  "license": "MIT",
  "sideEffects": false,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "start": "NODE_ENV=production node build/server.js",
    "dev": "npm run lerna:dev",
    "build": "razzle build",
    "test": "razzle test --env=jsdom",
    "ci-lint": "eslint --rule 'prettier/prettier: 2'",
    "format": "npm run ci-lint ./src -- --fix",
    "lint": "npm run ci-lint ./src ",
    "precommit": "lint-staged",
    "prepublishOnly": "npm run build:package",
    "lerna:bootstrap": "lerna bootstrap",
    "lerna:clean": "lerna clean",
    "lerna:build": "NODE_ENV=production lerna exec --parallel -- babel src -d lib --config-file ../../.babelrc",
    "lerna:dev": "lerna run dev --stream"
  },
  "lint-staged": {
    "linters": {
      "*.js": [
        "npm run ci-lint ./src/packages -- --fix",
        "git add"
      ]
    },
    "ignore": [
      "**/lib/**/*.js",
      "**/es/**/*.js"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all"
  },
  "devDependencies": {
    "autodll-webpack-plugin": "^0.4.2",
    "babel-eslint": "^10.0.1",
    "babel-plugin-lodash": "^3.3.4",
    "babel-plugin-transform-decorators-legacy": "^1.3.5",
    "css-loader": "^1.0.1",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-config-prettier": "^3.1.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jsx-a11y": "^6.1.2",
    "eslint-plugin-prettier": "^3.0.0",
    "eslint-plugin-react": "^7.11.1",
    "ignore-loader": "^0.1.2",
    "lerna": "^3.6.0",
    "lint-staged": "^8.0.4",
    "lodash-webpack-plugin": "^0.11.5",
    "mini-css-extract-plugin": "^0.4.4",
    "node-sass": "^4.9.4",
    "numeral": "^2.0.6",
    "postcss-browser-reporter": "^0.5.0",
    "postcss-cssnext": "^3.1.0",
    "postcss-import": "^12.0.1",
    "postcss-loader": "^3.0.0",
    "postcss-reporter": "^6.0.0",
    "postcss-url": "^8.0.0",
    "prettier": "^1.14.3",
    "raw-loader": "^1.0.0",
    "redux-devtools-extension": "^2.13.5",
    "redux-thunk": "^2.3.0",
    "sass-loader": "^7.1.0",
    "style-loader": "^0.23.1",
    "webpack": "^4.24.0",
    "webpack-bundle-analyzer": "^3.0.3",
    "webpack-cli": "^3.1.2"
  },
  "engines": {
    "node": ">=9.0.0"
  },
  "dependencies": {
    "babel-cli": "^6.26.0"
  }
}
